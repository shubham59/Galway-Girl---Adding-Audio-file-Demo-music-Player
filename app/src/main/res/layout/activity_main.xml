<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shubhamtripathi.addingaudio.MainActivity">

    <TextView
        android:text="Galway Girl Ed Sheeran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="24sp"
        android:layout_centerVertical="false"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/holo_blue_light" />

    <TextView
        android:text="Volume Seeker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="46dp"
        android:id="@+id/textView3"
        android:textSize="30sp"
        android:layout_above="@+id/seekBar"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/holo_blue_bright" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="57dp"
        android:id="@+id/seekBar"
        android:layout_above="@+id/scrubber"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playButton"
        android:text="Play"
        android:onClick="playAudio"
        android:layout_marginBottom="53dp"
        android:background="@android:color/holo_blue_bright"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrubber"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Music Seeker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:textSize="30sp"
        android:layout_below="@+id/scrubber"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:textColor="@android:color/holo_blue_bright" />

</RelativeLayout>
